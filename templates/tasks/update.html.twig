{% extends 'base.html.twig' %}

{% block title %}
    <title>Update Task</title>
{% endblock %}

{% block content %}
	<div class="content pt-3">
		<div class="row mx-auto">
			<div class="col-3 my-auto">
				{# <h3 class="text-center">Update your Task</h3> #}
			</div>

			<div class="row col-6">
                <h3 class="text-center text-light">Update your Task</h3>
                
				{{ form_start(form) }}
                    <div class="form-group col-3 mx-auto my-2 text-light">
                        {{ form_row(form.title) }}
                    </div>
                    <div class="form-group col-3 mx-auto my-2 text-light">
                        {{ form_row(form.content) }}
                    </div>
                    <div class="form-group col-3 mx-auto my-2 text-light">
                        {{ form_row(form.date) }}
                    </div>         
                    <div class="d-grid gap-2 col-3 mx-auto my-3">
                        <button type="submit" class="btn btn-primary btn-lg">Update</button>
                    </div>
                {{ form_end(form) }}
			</div>

            <div class="col-3">
				{{ form_errors(form) }}
			</div>
		</div>
	{% endblock %}